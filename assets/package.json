{
  "name": "@porsche-design-system/assets",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scope": "@porsche-design-system",
  "main": "../dist/index.js",
  "module": "../dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/"
  ],
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "homepage": "https://designsystem.porsche.com",
  "scripts": {
    "start": "npm run build && ../node_modules/.bin/http-server ./www -p 4201",
    "start-app": "npm run start",
    "build": "npm run clean:build && npm run build:fallbacks && npm run build:lib && npm run build:www",
    "build:fallbacks": "npm run build:fallbacks:generate-overlay && npm run build:fallbacks:tmp && npm run build:fallbacks:cdn+loader",
    "build:fallbacks:generate-overlay": "../node_modules/.bin/tsx scripts/generate-overlay.ts",
    "build:fallbacks:tmp": "../node_modules/.bin/rollup -c rollup.config.js --bundleConfigAsCjs",
    "build:fallbacks:cdn+loader": "../node_modules/.bin/tsx scripts/generate-cdn-loader.ts",
    "build:lib": "../node_modules/.bin/tsup index.ts --format esm,cjs --dts",
    "build:www": "rm -rf www && mkdir -p ./www && cp -r ./public/. ./www && cp -r ./dist/tmp/. ./www/.",
    "test:unit": "../node_modules/.bin/vitest --config tests/unit/config/vitest.config.ts",
    "test:vrt": "../node_modules/.bin/playwright test --config=tests/vrt/config/playwright.config.ts",
    "test:smoke:unit": "../node_modules/.bin/vitest --config tests/smoke/unit/config/vitest.config.ts",
    "clean:build": "rm -rf index.ts && rm -rf ./dist && rm -rf ./cdn && rm -rf ./tmp && rm -rf ./www"
  },
  "devDependencies": {
    "@playwright/test": "1.56.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/html-minifier": "^4.0.5",
    "change-case": "^5.4.4",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "jsdom": "^27.2.0",
    "rollup": "^4.52.4",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4",
    "mime": "^4.1.0"
  },
  "volta": {
    "extends": "../package.json"
  }
}
